<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <!-- Form fields -->
  <%= form.text_field :title, name: "task[title]", placeholder: "Title of todo" %>
  <%= form.text_field :description, name: "task[description]", placeholder: "Description of todo" %>
  <%= form.datetime_field :due_date, name: "task[due_date]" %>
  <%= form.hidden_field :completed, value: false, name: "task[completed]" %>
  <%= form.submit "Save" %>
<% end %>
