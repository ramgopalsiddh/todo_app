<%= turbo_frame_tag 'new_task' do %>
  <%= form_with(model: task, url: tasks_path, local: false, id: 'new_task_form', class: "d-flex w-50") do |form| %>
    <!-- Form fields -->
    <%= form.text_field :title, name: "task[title]", placeholder: "Title of todo", class: "form-control me-2 w-20" %>
    <%= form.text_field :description, name: "task[description]", placeholder: "Description of todo", class: "form-control me-2 w-20"%>
    <%= form.datetime_field :due_date, name: "task[due_date]", class: "form-control me-2 w-20" %>
    <%= form.hidden_field :completed, value: false, name: "task[completed]" %>
    <%= form.submit "Save", class: "btn btn-primary btn-sm ms-1" %>
  <% end %>
<% end %>
