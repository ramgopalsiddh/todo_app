<div>
  <%= form_with(model: task ) do |form| %>
    <%= form.check_box :completed,
                      data: {
                        id: task.id,
                        action: "tasks#toggle"
                      } %>
    <%= task.title %>
    <%= task.description %>
    <%= task.due_date %>
    <%= link_to "Edit", edit_task_path(task)%>
    <button data-action="click->tasks#delete" data-id="<%= task.id %>">Delete</button>
  <% end %>
</div>
